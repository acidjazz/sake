extends ../extend/layout

block content

  .page.contact

    .title get in touch
    .sbar

    .detail
      .left
        .studio
      .right
        .section
          .title the studio
          a.copy(href=config.social.map,target='_blank')
            p 295 Kansas Street<br /> San Francisco, CA 94122
          .sbar
        .section
          .title inquiries
          a.copy(href='mailto:' + config.social.mail, target='_blank')
            p info@designsakestudio.com
          .sbar
        .section
          .title chat
          a.copy(href='tel:' + config.social.phone)
            p=config.social.phone
      .clear
