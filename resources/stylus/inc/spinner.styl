.spinner
  position fixed
  top 0px
  left 0px
  width 100%
  height 100%
  opacity 1
    z-index 200
  onoff()
  > .incomplete
    background-color: c.white1
    background-image url(/img/pattern.jpg)
  > .complete, > .incomplete
    position absolute
    left 0px
    right 0px
    bottom 0px
    height 100%
    opacity 1
  > .complete
    opacity 0.05
    width 100%
    height 0%
    transition height 1s ease-in
    background-color: c.blue1
    filter: blur(10px)
    -webkit-filter: blur(10px)

  > .inner
    position relative
    width 100%
    height 100%
    > .patterns
      //animation spinner 2s infinite
      animation-delay 0.3s
      position absolute
      width 190px
      height 180px
      top 50%
      left 50%
      margin -100px 0 0 -100px
      > .pattern
        position absolute
        width 90px
        height 70px
        > svg > path
          animation glow 5s linear infinite
        &:nth-child(1)
          top 25px
          left 50px
          animation fadeIn 0.1s 0.05s ease-in both
        &:nth-child(2)
          transform rotate(90deg)
          top 55px
          left 80px
          animation fadeIn 0.1s 0.1s ease-in both
          > svg > path
            animation-delay 0.25s
        &:nth-child(3)
          transform rotate(180deg)
          top 85px
          left 50px
          animation fadeIn 0.1s 0.15s ease-in both
          > svg > path
            animation-delay 0.5s
        &:nth-child(4)
          transform rotate(-90deg)
          top 55px
          left 20px
          animation fadeIn 0.1s 0.2s ease-in both
          > svg > path
            animation-delay 0.75s

@keyframes spinner
  100%
    transform rotate(360deg)

@keyframes glow
  0%
    fill: c.blue1
  50%
    fill: c.gold1
  100%
    fill: c.blue1
