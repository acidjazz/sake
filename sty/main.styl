
vendor-prefixes ?= webkit moz o ms official

@import '/inc/mixins'
@import guide
@import '/inc/*'

.clear
  clearfix()

html, body
  margin 0
  padding 0

body
  padding 0
  margin 0
  font: f.copy1
  overflow-y scroll
  min-height 500px
a
  text-decoration none
  color: c.black1

#container
  min-height 500px
  > #inner
    onoff()
  &.sticky
    margin-top 200px

.page
  animation cellOutY 0.2s 0s ease-in both
  &.uc
    font: f.h1
    text-align center
  > .arrows
    width 200px
    height 40px
    margin 20px auto
    > svg > g > g > g > path
      fill: c.gold1
  > .copy
    text-align center
    font: f.copy2
    padding 10px 0

@import index
@import work
@import studio
