.carousel
  width 100%
  height 50vw
  position relative
  background-color: c.black1
  overflow hidden
  > .loader
    position absolute
    width 100%
    height 100%
    background-color: c.black1
    transition opacity 1s linear
    &.on
      opacity 1 
    &.off
      opacity 0

  > .slides
    > .slide
      position absolute
      width 100%
      height 100%
      background-size cover
      background-position 50% 10%
      &.on
        animation slideOn 1s 0s ease-out both
      &.off
        animation slideOff 1s 0.1s ease-out both

      /*
      &.slide1
        background-image url('/img/lrg/carousel/1440/volition.jpg')
      &.slide2
        background-image url('/img/lrg/carousel/1440/daffodil.jpg')
      &.slide3
        background-image url('/img/lrg/carousel/1440/destilado.jpg')
      */

  > .nav
    > .arrow
      position absolute
      width 50px
      height 50px
      border-top 1px solid white
      border-left 1px solid white
      top 50%
      margin-top -25px
      cursor pointer
      transition all 0.2s linear 
      &:hover
        border-top 2px solid white
        border-left 2px solid white
      &.left
        left 25px
        transform rotate(-45deg)
        &:hover
          left 20px
      &.right
        right 25px
        transform rotate(135deg)
        &:hover
          right 20px
    > .dots
      text-align center
      position absolute
      bottom 0px
      width 100%
      > .dot
        cursor pointer
        width 20px
        height 20px
        border-radius 50%
        margin 5px 10px
        display inline-block
        transition background-color 0.5s linear
        &:hover
          background-color: c.gold1
        &.on
          background-color: c.gold1
        &.off
          background-color: c.blue1


@keyframes slideOn
  from
    opacity 0
    transform scale(1.2)
  to
    opacity 1
    transform scale(1)

@keyframes slideOff
  from
    opacity 1
    transform scale(1)
  to
    transform scale(1.2)
    opacity 0


