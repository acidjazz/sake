
.page.detail
  max-width 1200px
  margin auto
  padding 0 50px

  > .submenu
    max-height 100px
    > a
      float left
      display block
      width 295px
      padding 3px
      text-transform uppercase
      font: f.copy2
      letter-spacing 1px
      transition color 0.1s linear
      &:hover
        color: c.blue2
      &.on
        color: c.gold1

  > .details
    border-top: 2px solid c.gold1
    margin 20px 0
    padding 20px 0
    animation cellOutY 0.2s 0.25s ease-in both
    > .section
      &.desc
        float left
        width 60%
      &.services
        width 35%
        float right
      > .title
        font: f.h1
        text-transform uppercase
        letter-spacing 2px
        padding 0 0 20px 0
      > .desc
        font: f.copyl
        > p
          margin 0 60px 20px 0

      &.services > .title
        text-align center
      > .services
        > ul
          > li
            font: f.copy4
            text-transform uppercase
            list-style-type circle
            letter-spacing 2px
            float left
            width 50%

    > .images
      text-align center
      animation cellInY 0.2s 0s ease-in both
      for num in 0..10
        &:nth-child({num})
          animation-delay unit(num*0.05, 's')
      > img
        display block
        margin 20px auto
        width 100%

@media all and (min-width: 1px) and (max-width: 1000px)
  .page.detail
    padding 20px 10px
    > .submenu
      max-height 100px
      > a
        float left
        display block
        width 90%
   
    > .details
      > .section
        &.desc
          float non
          width 100%
        &.services
          width 100%
          float none
        &.services > .title
          text-align left

        > .desc
          font: f.copyl
          > p
            margin 0 0 20px 0
        > .services
          > ul
            margin 0 0 20px 20px
            > li
              width 100%
   
