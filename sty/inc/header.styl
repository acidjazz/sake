
header
  > .inner
    max-width 1200px
    margin auto
    padding 50px
    > .logo
      float left
      > .vector
        animation cellOutX 0.2s 0s ease-in both
        width 400px
        height 65px
        > svg > g > g > path
          fill: c.blue1
      > .tagline
        width 380px
        text-align right
        font: f.copys
        color: c.gold1
        text-transform uppercase
        > .tag, > .bar
          display inline-block
        > .tag
          margin 0 0 5px 0
          letter-spacing 1px
          animation cellOutY 0.2s 0.1s ease-in both
          &:nth-child(1)
            animation-delay 0.2s
          &:nth-child(2)
            animation-delay 0.3s
          &:nth-child(3)
            animation-delay 0.4s
          &:nth-child(4)
            animation-delay 0.5s
          &:nth-child(5)
            animation-delay 0.6s
        > .bar
          background-color: c.gold1
          width 2px
          height 10px
          margin 0 2px
        
    > .menu
      float right
      > ul
        padding 0
        margin 0
        > li
          display inline-block
          padding 20px 40px
          font: f.copy2
          animation cellOutY 0.2s 0.2s ease-in both
          &:nth-child(2)
            animation-delay 0.3s
          &:nth-child(3)
            animation-delay 0.4s
          > a
            color: c.blue1
            text-transform uppercase
            position relative
            display block
            width 90px
            text-align center
            > .copy
              transform translate(0, 0)
              height 45px
              transition color 0.3s linear 0.1s
            > .bar
              position absolute
              background-color: c.gold1
              width 150%
              margin 0 0 0 -25%
              height 5px
              transition opacity 0.3s ease-out, transform 0.2s ease-out, height 0.2s ease-out
            &:hover > .bar
              opacity 1 !important
              transform translate(0, 28px) !important
            &.on > .bar
              opacity 1
              transform translate(0, -10px) !important
              height 45px
            &.off > .bar
              opacity 0
              transform translate(0, 0px)
            &.on > .copy
              color: c.white1

@media all and (min-width: 1px) and (max-width: 1000px)

  header
    > .inner
      max-width 1200px
      margin auto
      padding 20px 0 0 0
      > .logo
        float none
      > .logo > .vector
        width 90%
        height auto
        margin auto
      > .logo > .tagline
        width 87%
        margin -6% auto 0 auto

       > .menu
        float none
        text-align center
        margin 10px 0 0 0
        > ul
          padding 0
          margin 0
          > li
            display inline-block
            padding 20px 0
            > a
              display block
              text-align center
              width 30vw
              > .bar
                width 100%
                margin 0 0 0 0
