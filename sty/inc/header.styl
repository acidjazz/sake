
header
  > .inner
    max-width 1200px
    margin auto
    padding 50px
    > .logo
      float left
      > .vector
        animation cellOutX 0.2s 0.25s ease-in both
        width 400px
        height 65px
        > svg > g > g > path
          fill: c.blue1
      > .tagline
        width 380px
        text-align right
        font: f.copys
        color: c.gold1
        text-transform uppercase
        > .tag, > .bar
          display inline-block
        > .tag
          margin 0 0 5px 0
          letter-spacing 1px
          animation cellOutY 0.2s 0.3s ease-in both
          &:nth-child(1)
            animation-delay 0.4s
          &:nth-child(2)
            animation-delay 0.5s
          &:nth-child(3)
            animation-delay 0.6s
          &:nth-child(4)
            animation-delay 0.7s
          &:nth-child(5)
            animation-delay 0.8s
        > .bar
          background-color: c.gold1
          width 2px
          height 10px
          margin 0 2px
        
    > .menu
      float right
      > ul
        padding 0
        margin 0
        > li
          display inline-block
          padding 20px 40px
          font: f.copy2
          animation cellOutY 0.2s 0.9s ease-in both
          &:nth-child(2)
            animation-delay 1.0s
          &:nth-child(3)
            animation-delay 1.1s
          > a
            color: c.blue1
            text-transform uppercase
            transition border-bottom 0.2s linear
            &:hover > .active
              background-color: c.gold1 !important
              transform translate(0, 0) !important
            > .active
              background-color: c.gold1
              width 150%
              margin 0 0 0 -25%
              height 5px
              transition background-color 0.3s ease-out, transform 0.2s ease-out
              &.on
                background-color: c.gold1
                transform translate(0, 0)
              &.off
                background-color transparent
                transform translate(0, -30px)

