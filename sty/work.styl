
.page.work

  > .tiles
    text-align center
    margin 0 1.2vw

    > .tile
      display inline-block
      width 32.0vw
      height 32.0vw
      position relative
      animation cellInX 0.2s 0.25s ease-in both
      for num in 0..10
        &:nth-child({num})
          animation-delay unit(0.25 + ( num*0.1 ), 's')
      > .inner
        width 95%
        height 95%
        margin 0 2.5% 0 2.5%
        background-size cover
        background-position 50% 50%
        background-repeat no-repeat
        transition background-size 1s linear
      > .detail
        position absolute
        width 95%
        height 95%
        margin 0 2.5% 0 2.5%
        opacity 0
        background-color: c.white1
        background-image url(/img/pattern.jpg)
        transition opacity 0.2s linear
        > .title
          opacity 0
          font: f.copy5
          letter-spacing 2px
          text-align center
          line-height 33.33vw
          text-transform uppercase
          transform-origin middle
          transform perspective(1400px) rotateX(90deg)
          transition opacity 0.2s linear, transform 0.3s ease-out 0.2s
      &:hover
        > .detail
          opacity 0.8
          > .title
            opacity 1
            transform perspective(1400px) rotateX(0deg)


