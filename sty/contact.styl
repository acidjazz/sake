
.page.contact
  text-align center

  > .title
    font: f.h3
    max-width 1200px
    margin auto
    color: c.blue1
    padding 0 50px
    text-align left
  > .sbar
    display inline-block
    background-color: c.gold1
    height 2px
    width 100%
    max-width 1200px
    margin 0 50px

  > .detail
    max-width 1200px
    margin 30px auto 30px auto
    padding 0 50px
    > .left
      float left
      width 65%
      height 400px
      background-image url(/img/contact/studio.jpg)
      background-size cover
      padding 20px 0 0 0
    > .right
      text-align center
      padding 60px 0 0 0
      > .section
        > .title
          font: f.copy1
          text-transform uppercase
          color: c.blue1
        > .copy
          font: f.copy2
          color: c.blue1
        > .sbar
          display inline-block
          background-color: c.gold1
          height 2px
          margin 0 0 10px 0
          width 100px

@media all and (min-width: 1px) and (max-width: 1000px)
  .page.contact
    > .title
      padding 0 5%
    > .sbar
      width 90%
      max-width 1200px
      margin 0 5%

    > .detail
      padding 0 5%
      > .left
        float none
        width 100%
        height 50vw
