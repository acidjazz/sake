fontfaces(dir, fnts, exts)
  for fnt in fnts
    @font-face
      font-family dir fnt
      for ext in exts
        if ext == 'eot'
          src url('/fonts'/dir/fnt.eot) format('embedded-opentype')
        if ext == 'otf'
          src url('/fonts'/dir/fnt.otf) format('opentype')
        if ext == 'ttf'
          src url('/fonts'/dir/fnt.ttf) format('truetype')
        if ext == 'svg'
          src url('/fonts'/dir/fnt.svg) format('svg')
        if ext == 'woff'
          src url('/fonts'/dir/fnt.woff) format('woff')
      font-weight normal
      font-style normal

fonts = roman
fontfaces(chronicle, fonts, otf)

fonts = regular
fontfaces(engravers, fonts, ttf)

fonts = stencilregular
fontfaces(revista, fonts, otf)


